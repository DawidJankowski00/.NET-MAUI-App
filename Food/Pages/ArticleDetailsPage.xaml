<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food.Pages.ArticleDetailsPage"
             xmlns:model="clr-namespace:Food.Model"
             xmlns:viewmodel="clr-namespace:Food.ViewModel"
             x:DataType="viewmodel:ArticleDetailsViewModel"
             Title="{Binding Article.Title}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Article.Description}"/>
        <Label 
            Text="{Binding Article.Author}"/>
    </VerticalStackLayout>
</ContentPage>